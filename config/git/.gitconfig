# Include local/private config (not tracked in git)
# Create ~/.gitconfig.local with your email and name
[include]
	path = ~/.gitconfig.local

[difftool]
	prompt = true
[diff]
	tool = nvimdiff
[difftool "nvimdiff"]
	cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[merge]
	tool=vimdiff
[mergetool]
	prompt=false

[alias]
	st = status
	co = commit
	com = commit -m
	ad = add
	ch = checkout
	di = diff
	dic = diff --cached

[commit]
	tamplate = ~/.gitmessage.txt
	template = /home/iwase/.gitmessage.txt
[core]
	excludesFile = /Users/iwase/.gitignore_global
	editor = vim
    filemode=false
	autocrlf = false
